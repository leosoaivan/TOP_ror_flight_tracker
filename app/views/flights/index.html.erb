<%= form_for :flight, method: :get do |f| %>
  Departing: 
  <%= f.collection_select :departing_id, Airport.all, :id, :code %>
  
  Destination:
  <%= f.collection_select :arriving_id, Airport.all, :id, :code %>

  Passengers:
  <%= f.select(:passengers, 1..4) %>

  Date:
  <%= f.collection_select :date, Flight.distinct_dates, :date, :flight_date_formatted %>

  <%= f.submit "Find a flight" %>
<% end %>

<% if @chosen_flights %>
  <% @chosen_flights.each do |flight| %>
    <p>
      <%= flight.departing_id %>
      <%= flight.arriving_id %>
      <%= flight.date.to_s %>
    </p>
  <% end %>
<% end %>