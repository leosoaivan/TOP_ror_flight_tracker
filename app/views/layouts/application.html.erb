<!DOCTYPE html>
<html>

  <head>
    <title>RailsFlightTracker</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-xs-10 col-sm-8 col-xs-offset-1 col-sm-offset-2">
          <h1 id='title'>Flight Tracker</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-sm-8 col-xs-offset-1 col-sm-offset-2">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %> alert-dismissible">
              <button type='button' class='close fade' data-dismiss='alert'>
                <span aria-hidden="true">&times;</span>
              </button>
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-10 col-sm-8 col-xs-offset-1 col-sm-offset-2">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>

</html>
